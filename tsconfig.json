{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "lib": ["es2019", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.json", "dist", "examples", "__coverage__"]
}
